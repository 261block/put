<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
    android:text="PUM" 
    android:gravity="center" 
    android:padding="15dp" 
    android:layout_height="wrap_content" 
    android:layout_width="match_parent" 
    android:textSize="40sp"/>
    
<Button 
	android:text="Callloglist" 
	android:layout_height="wrap_content" 
	android:layout_width="fill_parent" 
	android:textSize="40sp" 
	android:onClick="onClick()" android:id="@+id/CallLogListButton"></Button>

<Button 
	android:layout_height="wrap_content" 
	android:text="Bookmarks" 
	android:textSize="40sp" 
	android:layout_width="fill_parent" android:id="@+id/BookmarksButton"></Button>

<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/Start" android:text="Start"></Button>
</LinearLayout>
